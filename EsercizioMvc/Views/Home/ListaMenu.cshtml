@{
    ViewBag.Title = "Lista Menu";
}
<div class="text-danger">
    @ViewBag.Message
</div>
<h2>@ViewBag.Title</h2>
<div class="container">
    <div class="row">
        <div class="col-md-3 h4">
            Nome
        </div>
        <div class="col-md-3 h4">
            Fascia Oraria
        </div>
        <div class="col-md-3 h4">
            Data
        </div>
    </div>
@for (int i = 0; i < ViewBag.ListMenu.Count; i++) { 
    <div class="row">
        <div class="col-md-3">
            @ViewBag.ListMenu[i].Nome
        </div>
        <div class="col-md-3">
            @ViewBag.ListMenu[i].Data
        </div>
        <div class="col-md-3">
            @ViewBag.ListMenu[i].FasciaOrario
        </div>
        <div class="col-md-3">
            <a href="/Home/DettaglioMenu/@ViewBag.ListMenu[i].Nome">Dettaglio</a>
        </div>
    </div>
}
</div>